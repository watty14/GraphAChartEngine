<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="210dp"
    android:layout_gravity="top">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/restaurantinformation_row_mon"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:lines="1"
            android:singleLine="true" />

        <TextView
            android:id="@+id/restaurantinformation_row_tue"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/restaurantinformation_row_wed"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/restaurantinformation_row_thu"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/restaurantinformation_row_fri"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/restaurantinformation_row_sat"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/restaurantinformation_row_sun"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#555555"
            android:textSize="14sp" />
        

    </LinearLayout>

    <View
        android:background="#000"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:id="@+id/restaurantinformation_row_divider2"/>

</FrameLayout>